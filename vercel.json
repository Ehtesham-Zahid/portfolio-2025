{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.(css|js|map|json|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|txt)$",
      "dest": "/$1.$2"
    },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
